@{
    if (IsPost)
    {
        if (Context.GetRouteValue("name").ToString().Trim() != "")
        {
            string albumName = Context.GetRouteValue("name");
            Storage store = new Storage(albumName);
            store.UpdateAlbums();
        }
    }
}

